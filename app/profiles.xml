        <!-- request parameter profile=... is checked against this value -->
        <name>default</name>
        
        <!-- customizations for the welcome page -->
        <favicon-url>http://www.hab.de/files/favicon.ico</favicon-url>
        <logo-1-url>http://www.hab.de/images/logo.gif</logo-1-url>
        <logo-2-url>https://www.mww-forschung.de/fileadmin/templates/img/brand/brand-green.svg</logo-2-url>
        
        <!-- used for the identify response -->
        <use-https>true</use-https>
